{
  "name": "ts_server",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register index.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "dev": "nodemon .",
    "start": "node .",
    "build": "tsc --project tsconfig.build.json && resolve-tspaths",
    "bs": "tsc --project tsconfig.build.json && resolve-tspaths && node ."
  },
  "author": "Eric Echemane",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "mongoose": "^6.6.0",
    "socket.io": "^4.5.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.7.16",
    "nodemon": "^2.0.19",
    "resolve-tspaths": "^0.7.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.3"
  }
}