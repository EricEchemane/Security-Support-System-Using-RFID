{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "build",
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "@entities/*": [
                "entities/*"
            ],
            "@controllers/*": [
                "controllers/*"
            ],
            "@routes/*": [
                "routes/*"
            ],
            "@db/*": [
                "db/*"
            ],
            "@utils/*": [
                "utils/*"
            ]
        }
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}